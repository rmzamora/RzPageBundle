{% block sonata_page_container %}
    {% block rzcms_header %}
    <header class="header">
        <!--logo-->
        <div class="container">
            <div class="row">
                <div class="span12">
                    <div class="navbar">
                        <!--logo-->
                        <div class="logo">
                            <a href="#"><img src="{{  asset('bundles/rzpage/theme/rzcms/img/sandbox-logo.png') }}" alt="" /></a>
                        </div>
                        <!--menu-->
                        <a class="menu-link" href="#menu"><i class="icon-reorder white"></i></a>
                        <nav id="menu2" class="menu">
                            <ul>
                                {% set url = rz_render_page_url('homepage') %}
                                {% if  url %}
                                    <li class="has-submenu-no">
                                        <a href="{{ path(url) }}">Home</a>
                                    </li>
                                {% endif %}
                                {% set url = rz_render_page_url('blog') %}
                                {% if  url %}
                                    <li class="has-submenu-no">
                                        <a href="{{ path(url) }}">Blog</a>
                                    </li>
                                {% endif %}
                                {% set url = rz_render_page_url('gallery') %}
                                {% if  url %}
                                    <li class="has-submenu-no">
                                        <a href="{{ path(url) }}">Gallery</a>
                                    </li>
                                {% endif %}
                                {% if (app.user is not null and app.security and app.security.token and app.security.isGranted('IS_AUTHENTICATED_FULLY')) %}
                                <li class="has-submenu">
                                    {% set url = rz_render_page_url('sonata_user_profile_show') %}
                                    {% if  url %}
                                        <li class="has-submenu">
                                            <a href="{{ path(url) }}"><i class="icon-user"></i> {{ app.user }}</a>
                                            {{ sonata_block_render({'type': 'sonata.user.block.menu', 'settings' : {'template':'RzUserBundle:Block:block_profile_menu.html.twig'} }, {'current_uri': app.request.requestUri}) }}
                                        </li>
                                    {% endif %}
                                </li>
                                {% else %}
                                    {% set url = rz_render_page_url('fos_user_security_login') %}
                                    {% if  url %}
                                    <li class="has-submenu-no">
                                        <a href="{{ path(url) }}">Login</a>
                                    </li>
                                    {% endif %}
                                    {% set url = rz_render_page_url('fos_user_registration_register') %}
                                    {% if  url %}
                                    <li class="has-submenu-no">
                                        <a href="{{ path(url) }}">Register</a>
                                    </li>
                                    {% endif %}
                                {% endif %}
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!--//header-->

    <!-- sticky header-->
    <header class="header sticky hidden-phone hidden-tablet">
        <div class="container">
            <div class="row">
                <div class="span12">
                    <div class="navbar">
                        <!--logo-->
                        <div class="logo-sticky">
                            <a href="#"><img src="{{  asset('bundles/rzpage/theme/rzcms/img/diamond.png') }}" alt="" /></a>
                        </div>
                        <!--menu-->
                        <nav id="menu" class="menu menu-sticky">
                            <ul>
                                {% set url = rz_render_page_url('homepage') %}
                                {% if  url %}
                                <li class="has-submenu-no">
                                    <a href="{{ path(url) }}">Home</a>
                                </li>
                                {% endif %}
                                {% set url = rz_render_page_url('blog') %}
                                {% if  url %}
                                <li class="has-submenu-no">
                                    <a href="{{ path(url) }}">Blog</a>
                                </li>
                                {% endif %}
                                {% set url = rz_render_page_url('gallery') %}
                                {% if  url %}
                                <li class="has-submenu-no">
                                    <a href="{{ path(url) }}">Gallery</a>
                                </li>
                                {% endif %}
                                {% if (app.user is not null and app.security and app.security.token and app.security.isGranted('IS_AUTHENTICATED_FULLY')) %}
                                    {% set url = rz_render_page_url('sonata_user_profile_show') %}
                                    {% if  url %}
                                    <li class="has-submenu">
                                        <a href="{{ path(url) }}"><i class="icon-user"></i> {{ app.user }}</a>
                                        {{ sonata_block_render({'type': 'sonata.user.block.menu', 'settings' : {'template':'RzUserBundle:Block:block_profile_menu.html.twig'} }, {'current_uri': app.request.requestUri}) }}
                                    </li>
                                    {% endif %}
                                {% else %}
                                    <li class="has-submenu-no">
                                        <a href="{{ path(rz_render_page_url('fos_user_security_login')) }}">Login</a>
                                    </li>
                                    <li class="has-submenu-no">
                                        <a href="{{ path(rz_render_page_url('fos_user_registration_register')) }}">Register</a>
                                    </li>

                                {% endif %}
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- // header -->
    {% endblock rzcms_header %}


    {% block rzcms_body %}
    <div class="container">
        <div class="row-fluid">
            <div class="span12 content">
                <div class="row-fluid">
                    <div class="span12">
                    {% if content is defined %}
                        {{ content|raw }}
                    {% else %}
                        {% set content = block('content') %}
                        {% if content|length > 0 %}
                            {{ content|raw }}
                        {% elseif page is defined %}
                            {% if sonata_page.isEditor or (app.user is not null and app.security and app.security.token and app.security.isGranted('ROLE_PREVIOUS_ADMIN')) %}
                                {{ sonata_page_render_container('content',page,{ 'use_cache': false})}}
                            {% else %}
                                {{ sonata_page_render_container('content', page,{ 'use_cache': true}) }}
                            {% endif %}
                        {% endif %}
                    {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endblock rzcms_body %}

    {% block rzcms_footer %}
        <!-- FOOTER -->
        <footer class="footer">
            <div class="container">
                <div class="row">
                    <div class="span12 center">
                        <img src="{{  asset('bundles/rzpage/theme/rzcms/img/diamond.png')}}" alt="" />
                        <div class="copyright">
                            {% if page is defined and not page.isHybrid %}
                             <p>
                                {{ sonata_block_render({ 'type': 'rz.seo.block.facebook.share_button', 'settings': {'default_url':url(rz_render_page_url(page.name), {}, true), 'default_title':rz_seo_title(), 'layout':'footer' } }) }}
                                {{ sonata_block_render({ 'type': 'rz.seo.block.twitter.share_button', 'settings': {'default_url':url(rz_render_page_url(page.name), {}, true), 'default_title':rz_seo_title(), 'layout':'footer' } }) }}
                                {{ sonata_block_render({ 'type': 'rz.seo.block.pinterest.share_button', 'settings': {'default_url':url(rz_render_page_url(page.name), {}, true), 'default_title':rz_seo_title(), 'layout':'footer', 'is_video':false, 'default_media_url':app.request.scheme ~'://' ~ app.request.httpHost ~ asset('bundles/rzpage/theme/rzcms/img/sandbox-logo.png') } }) }}
                                {{ sonata_block_render({ 'type': 'rz.seo.block.google.share_button', 'settings': {'default_url':url(rz_render_page_url(page.name), {}, true), 'layout':'footer' } }) }}
                             </p>
                            {% else %}
                            {% sonata_template_box 'Override the Block' 'RzPageBundle' %}
                            <p>
                                <a href="#"><i class="icon icon-facebook marg-right5"></i></a>
                                <a href="#"><i class="icon icon-twitter marg-right5"></i></a>
                                <a href="#"><i class="icon icon-pinterest marg-right5"></i></a>
                                <a href="#"><i class="icon icon-github marg-right5"></i></a>
                                <a href="#"><i class="icon icon-google-plus"></i></a>
                            </p>
                            {% endif %}

                            <p>
                                {% if sonata_page.isEditor or (app.user is not null and app.security and app.security.token and app.security.isGranted('ROLE_PREVIOUS_ADMIN')) %}
                                    {{ sonata_page_render_container('footer',page,{ 'use_cache': false})}}
                                {% else %}
                                    {{ sonata_page_render_container('footer', page,{ 'use_cache': true}) }}
                                {% endif %}
                            </p>
                        </div>
                        <div class="go-top">
                            <span class="dark-grey"><i class="icon icon-align-justify marg-right5"></i></span>
                            <a href="#"><i class="icon icon-chevron-sign-up"></i></a>
                            <span class="dark-grey"><i class="icon icon-align-justify marg-left5"></i></span>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        <!-- // END FOOTER -->
    {% endblock rzcms_footer %}
{% endblock %}
