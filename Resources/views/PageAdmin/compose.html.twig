{% extends 'RzAdminBundle:CRUD:action.html.twig' %}

{% block tab_menu %}{% endblock %}
{% block side_menu %}{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/rzpage/rzcms/js/composer.js') }}" type="text/javascript"></script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/rzpage/rzcms/css/composer.css') }}" type="text/css" media="screen" />
{% endblock %}

{% block body_attributes %}class="sonata-bc skin-black fixed page-composer-page sonata-ba-no-side-menu"{% endblock %}

{% block actions %}
    <div class="row-fluid admin-action-buttons">
        <div class="span12">
            <div class="sonata-actions btn-group hidden-phone hidden-tablet visible-desktop pull-right">
                <a class="btn btn-primary sonata-action-element" href="{{ path('admin_sonata_page_page_block_list', {'id':object.id}) }}"><i class="icon-reorder"></i> {{ 'sidemenu.link_list_blocks'|trans({}, 'SonataPageBundle') }}</a>
                {% include 'SonataAdminBundle:Button:create_button.html.twig' %}
                {% include 'SonataAdminBundle:Button:list_button.html.twig' %}
            </div>
            <div class="btn-group visible-phone visible-tablet hidden-desktop  pull-right">
                <div class="btn-group visible-phone visible-tablet hidden-desktop  pull-right">
                    <button class="btn btn-primary admin-actions admin-actions-group">Select an action to perform</button>
                    <button data-toggle="dropdown" class="btn btn-primary dropdown-toggle admin-actions"><i class=" icon-chevron-down"></i></button>
                    <ul class="dropdown-menu">
                        <li><a class="sonata-action-element" href="{{ path('admin_sonata_page_page_block_list', {'id':object.id}) }}"><i class="icon-reorder"></i> {{ 'sidemenu.link_list_blocks'|trans({}, 'SonataPageBundle') }}</a></li>
                        {% include 'SonataAdminBundle:Button:create_button_mobile.html.twig' %}
                        {% include 'SonataAdminBundle:Button:list_button_mobile.html.twig' %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="page-composer">
        <div class="box box-color box-bordered">
            <div class="box-title">
                <h3>
                    <i class="icon-pencil"></i>
                    {{ 'page.compose_page'|trans({}, 'SonataPageBundle') }} "{{ page.name }}" <small>[template: <b>{{ template.name }}</b>]</small>
                    <small class="btn btn-success"><a target="_blank" class="preview-page" href="{{ admin.getViewUrl }}"><i class="icon-eye-open"></i>{{ 'view_page'|trans({}, 'SonataPageBundle') }}</a></small>
                </h3>
            </div>
            <div class="box-content">
        {% if containers|length == 0 %}
            <div class="alert alert-warning">

                <strong>Warning!</strong> Before using the composer option, you need to configure the template layout.
                <br />The configuration must be done in the <code>sonata_page.templates</code> section.<br />

            <br />
            See a complete exemple here:


<pre>
sonata_page:
    # [...]
    templates:
        default:
            path: 'ApplicationSonataPageBundle::demo_layout.html.twig'
            name: 'default'
            containers:
                header:
                    name: Header
                content_top:
                    name: Top content
                content:
                    name: Main content
                content_bottom:
                    name: Bottom content
                footer:
                    name: Footer
            matrix:
                layout: |
                    HHHHHHHH
                    TTTTBBBB
                    TTTTBBBB
                    TTTTBBBB
                    TTTTBBBB
                    CCCCCCCC
                    CCCCCCCC
                    FFFFFFFF

                mapping:
                    H: header
                    T: content_top
                    C: content
                    B: content_bottom
                    F: footer
</pre>
</div>
        {% else %}
                    <div class="row-fluid">
                        <div class="col-md-4 span4">
                            <div class="page-composer__page-preview">
                                <div class="page-composer__page-preview__containers">
                                    {% for container in containers %}
                                        {% if container.block is defined and container.block %}
                                            <a class="page-composer__page-preview__container block-preview-{{ container.block.id }}"
                                               data-block-id="{{ container.block.id }}"
                                               style="top:{{ container.area.placement.y }}%;right:{{ container.area.placement.right }}%;bottom:{{ container.area.placement.bottom }}%;left:{{ container.area.placement.x }}%"
                                               href="{{ path('admin_sonata_page_page_compose_container_show', { 'id': container.block.id }) }}">
                                                <div class="page-composer__page-preview__container__content">
                                                    <strong>{{ container.block.name|default(container.area.name) }}</strong><br>
                                                    <small><span class="child-count">{{ container.block.children|length }}</span> blocks</small>
                                                    <span class="page-composer__page-preview__add-block">
                                                        <i class="icon-circle-blank"></i>
                                                        <i class="icon-circle"></i>
                                                    </span>
                                                    <span class="drop-indicator">
                                                        <span class="icon-download"></span>
                                                    </span>
                                                </div>
                                            </a>
                                        {% else %}
                                            <div class="page-composer__page-preview__container--no-block"
                                                 style="top:{{ container.area.placement.y }}%;right:{{ container.area.placement.right }}%;bottom:{{ container.area.placement.bottom }}%;left:{{ container.area.placement.x }}%"
                                            >
                                                <div class="page-composer__page-preview__container__content">
                                                    <strong>{{ container.area.name }}</strong>
                                                </div>
                                            </div>
                                        {% endif %}
                                    {% endfor %}
                                </div>
                            </div>

                            {% if orphanContainers|length > 0 %}
                                <div class="page-composer__orphan-containers">
                                    <h3 class="page-composer__orphan-containers__header">{{ 'page.orphan_containers'|trans({}, 'SonataPageBundle') }}</h3>
                                    <ul>
                                        {% for orphanContainer in orphanContainers %}
                                            <li class="page-composer__orphan-container block-preview-{{ orphanContainer.id }}"
                                                data-block-id="{{ orphanContainer.id }}"
                                                href="{{ path('admin_sonata_page_page_compose_container_show', { 'id': orphanContainer.id }) }}"
                                            >
                                                <strong>{{ orphanContainer.name|default(orphanContainer.type) }}</strong><br>
                                                <small><span class="child-count">{{ orphanContainer.children|length }}</span> blocks</small>
                                            </li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            {% endif %}
                        </div>
                        <div class="col-md-8 span8">
                            <div class="page-composer__dyn-content">
                            </div>
                        </div>
                    </div>
                </div>
            <script>
                $(document).ready(function () {
                    var composer = new PageComposer({{ page.id }});
                    
                    window.SonataPageComposer  = composer;
                    
                    composer.csrfTokens = {{ csrfTokens|json_encode()|raw }};
                    {#composer.setRoute('block_edit',            "{{ path('admin_sonata_page_block_edit',   { 'id': 'BLOCK_ID' }) }}");#}
                    composer.setRoute('block_edit',            "{{ path('admin_sonata_page_page_block_edit',   { 'id': 'PAGE_ID', 'childId': 'BLOCK_ID' }) }}");
                    composer.setRoute('block_remove',          "{{ path('admin_sonata_page_block_delete', { 'id': 'BLOCK_ID' }) }}");
                    composer.setRoute('save_blocks_positions', "{{ path('admin_sonata_page_block_savePosition') }}");
                    composer.setRoute('block_switch_parent',   "{{ path('admin_sonata_page_block_switchParent') }}");
                });
            </script>
        {% endif %}
    </div>
    </div>


{% endblock %}
